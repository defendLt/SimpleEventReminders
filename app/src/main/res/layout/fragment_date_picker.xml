<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >

    <DatePicker
        android:id="@+id/event_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/event_date_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/date_picker_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/event_date_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_date_picker" />

    <Button
        android:id="@+id/event_date_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/date_picker_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/event_date_confirm"
        app:layout_constraintTop_toBottomOf="@+id/event_date_picker" />

</androidx.constraintlayout.widget.ConstraintLayout>
